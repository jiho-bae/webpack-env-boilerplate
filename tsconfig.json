{
  "compilerOptions": {
    /* Basic Options */
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    "module": "es6",
    "esModuleInterop": true,
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    
  },
  "include": ["src/**.*"],
  "exclude":["node_modules"]
}